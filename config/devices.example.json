{
  "_metadata": {
    "description": "Code of the Sea - Device Configuration Template", 
    "instructions": "Copy to devices.json and update with your actual device credentials",
    "security": "Never commit devices.json - contains sensitive data"
  },
  
  "led": {
    "enabled": true,
    "tuya_controller": {
      "device_id": "your_tuya_device_id_from_wizard",
      "device_ip": "192.168.1.XXX",
      "device_key": "your_tuya_local_key_from_wizard",
      "protocol_version": "3.5"
    },
    "veml7700_sensor": {
      "enabled": true,
      "i2c_bus": 1
    }
  },
  
  "radio": {
    "enabled": true,
    "tea5767": {
      "i2c_bus": 1,
      "i2c_address": "0x60"
    }
  },
  
  "fan": {
    "enabled": true,
    "grove_mosfet": {
      "fan_pwm_pin": 18,
      "pwm_frequency": 10
    }
  }
}
